<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AntelopeRunActivity"
        android:background="@drawable/msafari">

    <Button
            android:layout_width="140dp"
            android:layout_height="42dp"
            android:onClick="statAntelopeGame"
            android:background="@drawable/temstart"
            android:textColor="@color/deep_red"
            android:text="statistics"
            android:textStyle="bold"
            android:textSize="24sp"
            app:layout_constraintVertical_bias="0.13"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/stat_ant"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Antelope of gold!"
            android:fontFamily="@font/marlboro"
            android:textColor="@color/deep_red"
            android:textSize="46sp"
            android:textStyle="bold"
            app:layout_constraintVertical_bias="0.27"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/title"/>

    <ImageButton
            android:layout_width="240dp"
            android:layout_height="72dp"
            android:onClick="startAntelopeGame"
            android:background="@drawable/start_ant"
            app:layout_constraintVertical_bias="0.47"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/start_ant" tools:ignore="OnClick"/>

    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintVertical_bias="0.8"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/start_ant">
        <FrameLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content">

            <pl.droidsonroids.gif.GifImageView
                    android:layout_width="330dp"
                    android:layout_height="330dp"
                    android:background="@drawable/antelopecircle"/>

        </FrameLayout>
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>