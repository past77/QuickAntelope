<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultActivity"
    android:background="@drawable/lvbk">

    <RelativeLayout
            android:layout_width="400dp" android:layout_height="300dp"
            android:background="@drawable/go600"
            android:id="@+id/desk"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GAME OVER"
                android:id="@+id/gameov"
                android:padding="20dp"
                android:textSize="38sp"
                android:gravity="center"
                android:textColor="@color/deep_red"
                android:textStyle="bold"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
        />

        <TextView
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="150"
                android:textSize="35dp"
                android:layout_below="@+id/gameov"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:id="@+id/resultsTV"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"

        />


        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="High Score: 300"
                android:textSize="35dp"
                android:layout_below="@+id/resultsTV"
                android:layout_marginTop="12dp"
                android:id="@+id/bestresultTV"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"/>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/bestresultTV"
                android:gravity="center"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="71dp"
                android:layout_marginTop="4dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="71dp">

            <Button
                    android:id="@+id/exit_btm"
                    android:layout_width="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_height="40dp"
                    android:onClick="backHome"
                    android:backgroundTint="@color/white"
                    android:background="@drawable/home"
                    android:layout_marginEnd="10dp"
            />


            <Button
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:id="@+id/resume_btn"
                    android:layout_marginTop="10dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/star"
                    android:layout_marginEnd="10dp"
                    android:onClick="highScores"
            />

            <Button
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:textAllCaps="false"
                    android:id="@+id/retryB"
                    android:onClick="retry"
                    android:backgroundTint="@color/white"
                    android:background="@drawable/returne"
                    android:layout_marginEnd="10dp"
            />


        </LinearLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>